{{- with .Site }}
{
    "siteName": "{{ .Title }}",
    "baseURL": "{{ .BaseURL }}",
    "description": "{{ .Params.description }}",
    "pages": [
        {{- range $index, $page := .RegularPages }}
        {
            "title": "{{ $page.Title }}",
            "url": "{{ $page.Permalink }}",
            "summary": "{{ $page.Summary }}"
        }{{ if ne (add $index 1) (len $.Site.RegularPages) }},{{ end }}
        {{- end }}
    ]
}
{{- end }}